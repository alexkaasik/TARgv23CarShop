@model TARgv23CarShop.Models.Cars.CarDeleteViewModel


@{
    ViewData["Title"] = "Car Delete";
}

<h1>Car Delete</h1>
<h4>Warning Delete button currently is not working. Go to contact with the administrator.</h4>
<div>
    <hr />
    <div class="table-wrapper">
        <table>

            <tr>
                <td><label class="col-sm-2 col-form-label">ID</label></td>
                <td><label>@Html.DisplayFor(model => model.CarId)</label></td>
            </tr>
            <tr>
                <td><label class="col-sm-2 col-form-label">Name</label></td>
                <td><label>@Html.DisplayFor(model => model.CarName)</label></td>
            </tr>
            <tr>
                <td><label class="col-sm-2 col-form-label">Year model</label></td>
                <td><label>@Html.DisplayFor(model => model.CarYear)</label></td>
            </tr>
            <tr>
                <td><label class="col-sm-2 col-form-label">Price</label></td>
                <td><label>@Html.DisplayFor(model => model.CarPrice)</label></td>
            </tr>
            <tr>
                <td><label class="col-sm-2 col-form-label">Created At</label></td>
                <td><label>@Html.DisplayFor(model => model.CreatedAt)</label></td>
            </tr>
            <tr>
                <td><label class="col-sm-2 col-form-label">Modified At</label></td>
                <td><label>@Html.DisplayFor(model => model.ModifiedAt)</label></td>
            </tr>
        </table>
    </div>
    
    <form asp-action="DeleteConfirmation">
        <input type="hidden" asp-for="CarId" />
        <input type="submit" value="Delete" class="button danger" />
        <a asp-action="Index" asp-controller="Cars" class="button success">Back</a>
    </form>
    
</div>