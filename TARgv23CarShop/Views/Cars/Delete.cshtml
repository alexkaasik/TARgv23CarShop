@model TARgv23CarShop.Models.Cars.CarDeleteViewModel


@{
    ViewData["Title"] = "Car Delete";
}

<h1>Delete</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label asp-for="CarId" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CarId)
        </div>

        <div class="form-group row">
            <label asp-for="CarName" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CarName)
        </div>

        <div class="form-group row">
            <label asp-for="CarPrice" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CarPrice)
        </div>

        <div class="form-group row">
            <label asp-for="CarYear" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CarYear)
        </div>
        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.CreatedAt)
        </div>

        <div class="form-group row">
            <label asp-for="ModifiedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => model.ModifiedAt)
        </div>

        <form asp-action="DeleteConfirmation">
            <input type="hidden" asp-for="CarId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" asp-controller="Cars" class="btn btn-success">Back</a>
        </form>
    </dl>
</div>