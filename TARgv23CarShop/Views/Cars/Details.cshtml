@model TARgv23CarShop.Models.Cars.CarDetailsViewModel

@{
    ViewData["Title"] = "Car Detail";
}

<h1>Details</h1>

<div>
    <h4>Car</h4>
    <hr />
    <dl class="row">
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">ID</label>
            @Html.DisplayFor(model => model.CarId)
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name</label>
            @Html.DisplayFor(model => model.CarName)
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Year model</label>
            @Html.DisplayFor(model => model.CarYear)
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Price</label>
            @Html.DisplayFor(model => model.CarPrice)
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Created At</label>
            @Html.DisplayFor(model => model.CreatedAt)
        </div>

        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Modified At</label>
            @Html.DisplayFor(model => model.ModifiedAt)
        </div>
    </dl>
    <a asp-action="Index" asp-controller="cars" class="btn btn-danger">Back</a>
</div>